snippet resw "respond_with"
respond_with(${1:@${2:model}})${3: do |format|
	format.${4:html} { $0 \}
end}
endsnippet

snippet gem "gem"
gem '${1:name}', ${2:version}
endsnippet

snippet scope "scope"
scope :${1:name}, ${2:joins(:${3:table}).}where(${4:'${5:$3.${6:field}} = ?', ${7:'${8:value}'}})
endsnippet
